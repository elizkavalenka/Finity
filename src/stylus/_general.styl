*
    margin 0
    padding 0
    box-sizing border-box
    font-family 'Circular Std', Arial, sans-serif
    font-weight normal
body
    margin 0 auto
.container
    max-width 1100px
    margin 0 auto
.button
    display inline-block
    border-radius 5px
    color #ffffff
    background #0f53fa
    text-decoration none
    height 56px
    width 218px
    padding-top 20px
    font-size 16px
    line-height 1.2
    font-weight 500
    text-align center
    &-white
        background-color #fff
        color #1d293f
        border 2px solid #e2e4e8
    &:hover
        transform scale(1.1)
        transition 0.8s ease-in-out
    &-mini
        font-size 13px
        padding-top 17px
        height 46px
        width 171px
.title
    font-size 48px
    line-height 56px
    font-weight 700
    letter-spacing -0.017em
    color #1d293f
    margin-bottom 25px
.text
    font-size 18px
    line-height 32px
    color #7c8087
.divider
    height 1px
    background-color #ECEFF4
    margin-bottom 118px