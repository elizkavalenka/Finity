.promo
    height 825px
    &__button
        margin-bottom 18px

    &__descr
        width 550px
        margin 0 auto
        margin-bottom 109px
        text-align center
        h1
            font-size 58px
            line-height 64px
            font-weight 700
            margin-bottom 19px
        &-text
            font-size 21px
            line-height 30px
            color #7c8087
            margin-bottom 40px
            &-mini
                font-size 13px
                line-height 20px
                color #8c97ac
    &__media
        position relative
        text-align center
        img 
            border-radius 15px
    &__circle
        position absolute
        top -90px
        right 0
        width 282px
        height 282px
        background-color #38dff6
        border-radius 50%
        z-index -2
        animation dance 2.1s ease infinite
    &__rectangle
        position absolute
        top 151px
        left 0
        width 304px
        height 304px
        background-color #ffd166
        border-radius 30px
        z-index -2
        animation dance 2.1s ease infinite