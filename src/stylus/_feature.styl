.feature
    margin 0 auto 118px
    padding-top 50px
    position relative
    overflow hidden
    background-color #fff
    .title
        text-align center
        margin-bottom 18px
    &__text
        font-size 18px
        line-height 25px
        color #7c8087
        width 489px
        margin 0 auto 84px
        text-align center
    &__carousel
        display flex
        justify-content space-between
        width 100vw
        position relative
        transform translateX(-20%)
        margin-bottom 63px
        background-color #fff
    &__button
        display flex
        align-items center
        justify-content space-evenly
        padding-top 0
        margin 0 auto 10px

.card
    display flex
    justify-content start
    // width 350px
    height 158px
    background-color #f7f8fa
    border-radius 10px
    padding-top 23px
    padding-left 19px
    padding-right 52px
    margin-right 30px

    &:first-child, &:last-child
        opacity 0.08
    &-img
        width 55px
        height 55px
        border-radius 50%
        background-color #ffffff
        display flex
        justify-content center
        align-items center
    &-descr
        width 204px
        font-size 16px
        line-height 28px
        color #7c8087
        margin-left 20px
    &-name
        font-size 21px
        line-height 34px
        font-weight 700
        color #1d293f

.companies
    display flex
    margin 0 auto 138px
    justify-content space-evenly
    img
        opacity 0.5
        object-fit contain