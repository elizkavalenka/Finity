.feature
    position relative
    margin 0 auto
    overflow hidden
    background-color #fff
    .title
        text-align center
        margin-bottom 26px
    &__text
        font-size 18px
        line-height 32px
        color #7c8087
        width 489px
        margin 0 auto
        margin-bottom 84px
        text-align center
    &__carousel
        display flex
        justify-content center
        width 1870px
        position relative
        left -380px
        margin-bottom 63px
        background-color #fff
    &__button
        display flex
        align-items center
        justify-content space-between
        width 217px
        margin 0 auto

.card
    display flex
    justify-content space-around
    width 350px
    height 158px
    background-color #f7f8fa
    border-radius 10px
    padding-top 22px
    margin-right 30px

    &:first-child, &:last-child
        opacity 0.08
    &-img
        width 55px
        height 55px
        border-radius 50%
        background-color #ffffff
        display flex
        justify-content center
        align-items center
    &-descr
        width 204px
        font-size 16px
        line-height 28px
        color #7c8087
    &-name
        font-size 21px
        line-height 34px
        font-weight 700
        color #1d293f

.companies
    display flex
    margin 0 auto
    justify-content space-evenly
    padding-top 54px
    margin-bottom 142px
    img
        opacity 0.5
        object-fit contain